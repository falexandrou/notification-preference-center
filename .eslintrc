{
  "rules": {
    "class-methods-use-this": "off",
    "function-paren-newline": "off",
    "object-curly-newline": "off",
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"]
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "ignorePatterns": [
    "**/dist/**"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
